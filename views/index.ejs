<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1 class="text-light">Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <div class="card" id="formulario-pergunta">
                <div class="card-body">
                    <h3 class="text-light"><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Responder</button>
                </div>
            </div>
        <% }) %>
        <br>
    </div>
</body>
<%- include ('partials/footer.ejs') %>