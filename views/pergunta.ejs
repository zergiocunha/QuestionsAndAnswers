<%- include ('partials/header.ejs') %>
<body>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <div class="card" id="formulario-pergunta">
        <div class="card-header">
            <h1 id="styleLetters"><%= pergunta.titulo %></h1>
            <p id="styleResposta"><%= pergunta.descricao %></p>
        </div>
        <hr id="styleBr">
        <form method="POST" action="/responder">
            <div class="card-body">
                <h3 id="styleLetters">Responda:</h3>
                <br>
                <textarea placeholder="Digite sua resposta" id="style" class="form-control text-light" name="corpo"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-success">Responder</button>
            </div>
        </form>
        <hr id="styleBr">
        <div class="card-body">
        <h3 id="styleLetters">Respostas anteriores:</h3>
        </div>
            <div class="card-body">
                <% respostas.forEach(resposta => { %>
                <div class="card" id="style">
                    <div class="card-body" id="style">
                        <p id="styleResposta"><%= resposta.corpo %></p>
                    </div>
                </div>
                <br>
            <% }) %>
            </div>
        </div>
    </div>
    <hr>
</body>
<%- include ('partials/footer.ejs') %>