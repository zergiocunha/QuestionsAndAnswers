<%- include ('partials/header.ejs') %>
<body>
<%- include ('partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h1 class="text-light"><%= pergunta.titulo %></h1>
    <p class="text-light"><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder">
        <h3>Responda</h3>
        <label class="text-light">Resposta:</label>
        <textarea placeholder="Digite sua resposta" id="style" class="form-control" name="corpo">Responda</textarea><br>
        <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
        <button type="submit" class="btn btn-success">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(resposta => { %>
    <br>
    <div class="card">
        <div class="card-body">
        <p><%= resposta.corpo %></p>
        </div>
    </div>
    <br>
    <% }) %>
</div>
</body>
<%- include ('partials/footer.ejs') %>